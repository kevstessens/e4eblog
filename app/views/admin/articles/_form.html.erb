#encoding: utf-8

<%= semantic_nested_form_for [:admin, @article] do |f|%>

    <%=f.inputs "Article Details" do%>
        <%= f.input :title %>
        <%= f.input :subtitle %>
        <%= f.input :body, as: :wysihtml5, commands: [ :bold, :italic, :underline, :ul, :ol, :outdent, :indent, :link ] %>
        <%= f.input :main_image %>
        <%= f.input :date, as: :date_picker %>
        <%= f.input :category, as: :select2 %>
        <%= f.input :author, as: :select2 %>
    <%end%>

    <br>

    <%= f.actions do %>
        <%= f.action :submit %>
        <li class="cancel">
          <%=link_to "Cancel", admin_articles_path%>
        </li>
    <% end %>

<% end%>